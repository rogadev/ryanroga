---
interface SkillCategory {
  name: string
  skills: string[]
}

const skillCategories: SkillCategory[] = [
  {
    name: 'Front-End Development',
    skills: [
      'TypeScript',
      'JavaScript',
      'HTML/CSS',
      'Vue.js',
      'React',
      'Svelte',
      'Tailwind CSS',
    ],
  },
  {
    name: 'Back-End Development',
    skills: ['Node.js', 'Express', 'PostgreSQL', 'REST APIs'],
  },
  {
    name: 'Full-Stack Frameworks',
    skills: ['Nuxt.js', 'Next.js', 'Astro', 'SvelteKit'],
  },
  {
    name: 'Tools & Infrastructure',
    skills: [
      'Git',
      'Supabase',
      'Prisma',
      'OpenAI API',
      'Google Maps API',
      'CI/CD',
    ],
  },
]
---

<section
  id='about'
  class='py-16 sm:py-24 bg-white dark:bg-gray-900'
  aria-labelledby='about-heading'
>
  <div class='container mx-auto px-4'>
    <div class='max-w-4xl mx-auto'>
      <h2
        id='about-heading'
        class='text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-8 text-center'
      >
        About Me
      </h2>

      <div class='prose prose-lg dark:prose-invert max-w-none mb-12'>
        <p class='lead text-xl text-gray-700 dark:text-gray-200 mb-4'>
          I am a full-stack web developer with a proven track record of
          delivering complex business solutions that drive operational
          efficiency and growth.
        </p>

        <p class='text-gray-600 dark:text-gray-300 mb-4'>
          My expertise lies in developing scalable web applications that address
          real business challenges. Through collaborative engagement with
          diverse clients, I transform requirements into functional solutions
          that enhance business operations, optimize logistics management,
          automate routine tasks, and integrate AI-powered capabilities.
        </p>

        <p class='text-gray-600 dark:text-gray-300'>
          With a focus on user-centered design principles, I create intuitive
          interfaces backed by robust architectures. I'm currently seeking a
          full-time position with a collaborative team where I can leverage my
          technical skills to drive innovation while continuing to grow
          professionally.
        </p>
      </div>

      <div class='mb-12'>
        <h3
          class='text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-6'
        >
          Technical Expertise
        </h3>

        <div class='grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-10'>
          {
            skillCategories.map((category) => (
              <div>
                <h4 class='text-xl font-medium text-blue-600 dark:text-blue-400 mb-3 pb-2 border-b border-gray-200 dark:border-gray-700'>
                  {category.name}
                </h4>
                <div class='grid grid-cols-2 gap-y-2 gap-x-4'>
                  {category.skills.map((skill) => (
                    <div class='flex items-center text-gray-700 dark:text-gray-300'>
                      <span class='w-1.5 h-1.5 bg-blue-500 rounded-full mr-2.5 flex-shrink-0' />
                      <span>{skill}</span>
                    </div>
                  ))}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
